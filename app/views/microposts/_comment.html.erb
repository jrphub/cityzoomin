<div class="comment-pic">
	<img src="<%=profile_pic_url(comment)%>" width="40px" height="40px" alt="<%=comment.username%>" title="<%=comment.username%>"/>
</div>
<div style="float:right;">
		<% if current_user?(comment.user) || current_user.admin? %>
			<%= link_to image_tag('close.png'), comment, method:  :delete,
            	confirm: "Do you really want to delete it?",
             	title:   "Delete",:remote=>true %>
		<% end %>
</div>
<div class="comment_body">
	<a href="/users/<%=comment.user_id%>" class="username"><%=comment.username.titleize%></a>
	<p class="time">On <%=comment.created_at.localtime.strftime("%a, %B %d, %Y at %I:%M %p")%></p>
	<p class="comment_content"><%=comment.description.capitalize%></p>
	<hr>
</div>