<!-- Dynamic Background -->
<%= javascript_include_tag 'application' %>
<!--gems overwrite the new structure of the default.js location-->
<div class="content">
	<div class="header">
		<div style="float:left;">
			<a href="/"><img src="/assets/logo.png" alt="cityzoomin" width="90%"/></a>
		</div>
		<div style="float:right">
			<% if signed_in? %>
			<div style="color: #FFFFFF;font-size:12px;text-align:center;padding:20px;">
				Welcome! <%=current_user.email.titleize%>
				<%if current_user.admin?%>
				(Admin)
				<%end%>
			</div>
			<ul class="ca-menu">
				<%if current_user.admin?%>
				<li>
	            	<div class="ca-content">
	            	<h3><%= link_to("All Users", :users, :class=>"ca-sub", :style=>"text-align:center;") %></h3>
	            	</div>
            	</li>
				<%end%>
                <li>
                	<div class="ca-content">
                	<h3><%= link_to("Image Wall", :image_wall, :class=>"ca-sub", :style=>"text-align:center;") %></h3>
                	</div>
            	</li>
                
                <li>
                	<div class="ca-content">
                	<h3><%=link_to("All CZ", :microposts, :class=>"ca-sub", :style=>"text-align:center;")%></h3>
                	</div>
            	</li>
                <li>
                	<div class="ca-content">
                	<h3><a style="text-align:center;" class="ca-sub" href="/microposts/index?view=only">Your CZ</a></h3>
                	</div>
            	</li>
                <li>
                	<div class="ca-content">
                	<h3><%= link_to("Profile", current_user, :class=>"ca-sub", :style=>"text-align:center;") %></h3>
                	</div>
            	</li>
            	<li>
                	<div class="ca-content">
                	<h3><%= link_to("Edit Profile", edit_user_path(current_user), :class=>"ca-sub", :style=>"text-align:center;") %></h3>
                	</div>
            	</li>
            	<li>
                	<div>
                	<h3><%= link_to("Signout", signout_path, :method => :delete, :class=>"ca-sub", :style=>"text-align:center;") %></h3>
                	</div>
            	</li>
        	</ul>
			<%else%>
			<!--do nothing-->
            <% end %>
       </div>
	</div>
	<div style="height:130px;display:block;"></div>

